# 12)
a = int(input("Insira o primeiro numero"))
b = int(input("Insira o segundo numero"))
c = int(input("Insira o terceiro numero"))

if a > b:
    if a > c:
        print(a)
    else:
        print(c)
else:
    if b > c:
        print(b)
    else:
        print(c)

# 13)
a = int(input("Insira o primeiro numero"))
b = int(input("Insira o segundo numero"))
c = int(input("Insira o terceiro numero"))

iguais = 0

if(a == b):
    iguais += 1

if (b == c):
    iguais += 1

if (a == c):
    iguais += 1

# 14)
idade = int(input("Insira a idade"))
classificacao = ""

if(idade < 9):
    classificacao = "mirim"
if(idade >= 9 and idade < 14):
    classificacao = "infantil"
if(idade >= 14 and idade < 18):
    classificacao = "juvenil":
else:
    classificacao = "adulto"

print(classificacao)

# 15)
a = int(input("Insira o primeiro numero"))
b = int(input("Insira o segundo numero"))
c = int(input("Insira o terceiro numero"))

if(a + b >= c and b + c >= a and c + a >= b):
    print("É válido")
    if(a == b and b == c):
        print("Equilátero")
    else:
        if(a == b or b == c or a == c):
            print("Isóceles")
        else:
            print("Escaleno")
else:
    print("Não é válido")

# 16)
a = int(input("Insira o primeiro numero"))
b = int(input("Insira o segundo numero"))
c = int(input("Insira o terceiro numero"))

if(a >= b and a >= c):
    if(b > c):
        print(a)
        print(b)
        print(c)
    else:
        print(a)
        print(c)
        print(b)

else:
    if(b >= a and b >= c):
        if(a > c):
            print(b)
            print(a)
            print(c)
        else:
            print(b)
            print(c)
            print(a)
    else:
        if(a > b):
            print(c)
            print(a)
            print(b)
        else:
            print(c)
            print(b)
            print(a)

# 17)
a = int(input("Insira o primeiro numero"))
b = int(input("Insira o segundo numero"))
c = int(input("Insira o terceiro numero"))

media = (a + b + c) / 3
if(media < 7):
    print("[" + str(media) + "] - Reprovado")
else:
    if(media == 10):
        print("[" + str(media) + "] - Aprovado com distinção")
    else:
        print("[" + str(media) + "] - Aprovado")

# 18)
a = int(input("Insira o numero"))
if(a % 2 == 0):
    print("Par")
else:
    print("Ímpar")

