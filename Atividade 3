# 10)
frase = "ola mundo"
counter = 0
counterEspaco = 0
for letra in frase:
    if letra in ["a", "e", "i", "o", "u"]:
        counter += 1
    if letra == " ":
        counterEspaco += 1
print("Vogais: " + str(counter))
print("Espaços:" + str(counterEspaco))


