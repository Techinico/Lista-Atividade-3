primeiraPalavra = frase.split(" ")[0]
print(primeiraPalavra.lower())


# 12)
valor = float(input("Insira o valor da TV: "))
porcentagemDesconto = float(input("Agora a porcentagem do desconto: "))

valorComDesconto = valor * (porcentagemDesconto/100)
print("Valor da TV com desconto: " + str(valorComDesconto))

taxa = float(input("Insira a taxa de juros por mês: "))
parcelas = int(input("Insira a quantidade de parcelas: "))

juros = valor * taxa * parcelas
print("Juros = " + str(juros))

# 13)
texto = "Texto para encriptar"
encriptado = texto[::-1]
print(encriptado)

decriptado = encriptado[::-1]
print(decriptado)


